{% extends "MeupfPlateformBundle::layout.html.twig" %}

{# code ne marche pas  ca redirecte sur l'index todo #}
{% block title %}

    Supprimer un sermon - {{ parent() }}

{% endblock %}


{% block meupfplateform_body %}


<h2>Supprimer un sermon</h2>


<p>

    Etes-vous certain de vouloir supprimer le sermon "{{ sermon.title }}" ?

</p>


{# On met l'id de l'annonce dans la route de l'action du formulaire #}

<form action="{{ path('meupf_sermon_delete', {'id': sermon.id}) }}" method="post">

    <a href="{{ path('meupf_sermon_view', {'id': sermon.id}) }}" class="btn btn-default">

        <i class="glyphicon glyphicon-chevron-left"></i>

        Retour à la page sermon

    </a>

    {# Ici j'ai écrit le bouton de soumission à la main #}

    <input type="submit" value="Supprimer" class="btn btn-danger" />

    {# Ceci va générer le champ CSRF #}

    {{ form_rest(form) }}

</form>

