{% block body %}
    <!-- Start Content -->
    <div class="main" role="main">
        <div id="content" class="content full">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 sermon-archive">
                        <!-- Sermons Listing -->
                        {% for sermon in sermons %}
                            {% if sermon.online == 1 %}
                            <article class="post sermon">
                                <header class="post-title">
                                    <div class="row">
                                        <div class="col-md-9 col-sm-9">
                                            <h3>{{ sermon.title }}</h3>
                                            <span class="meta-data"><i class="fa fa-calendar"></i> Post√© le {{  sermon.createdAt|date('d-m-Y') }} | Pastor: <a href="#">Admin</a></span> </div>
                                        <div class="col-md-3 col-sm-3 sermon-actions"> <a href="#" data-placement="top" data-toggle="tooltip" data-original-title="Video" ><i class="fa fa-video-camera"></i></a> <a href="#" data-placement="top" data-toggle="tooltip" data-original-title="Audio" ><i class="fa fa-headphones"></i></a> <a href="#" data-placement="top" data-toggle="tooltip" data-original-title="Read online" ><i class="fa fa-file-text-o"></i></a> <a href="#" data-placement="top" data-toggle="tooltip" data-original-title="Download PDF" ><i class="fa fa-book"></i></a> </div>
                                    </div>
                                </header>
                                <div class="post-content">
                                    <div class="row">
                                        <div class="col-md-4"> <img src="{{ sermon.image }}" alt="" class="img-thumbnail"> </div>
                                        <div class="col-md-8">
                                            <p>{{  sermon.content | truncate(250, false, '...') | raw }}</p>
                                            <p><a href="{{ path('meupf_front_end_sermon_view_slug', { 'id': sermon.id ,'slug': sermon.slug, 'year':  sermon.createdAt|date('Y')  }) }}" class="btn btn-primary">En lire + <i class="fa fa-long-arrow-right"></i></a></p>
                                        </div>
                                    </div>
                                </div>
                            </article>
                            {% endif %}
                        {% endfor %}

                        {{ knp_pagination_render(sermons) }}
                    </div>
                   {{ include('MeupfFrontEndBundle:Sermon:sermon_categorie_sidebar.html.twig') }}
                        <div class="widget sidebar-widget">
                            <div class="sidebar-widget-title">
                                <h3>Sermon Speakers</h3>
                            </div>
